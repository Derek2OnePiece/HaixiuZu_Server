<table class="table table-bordered list-table">
    <thead>
    <tr>
        <th>#</th>
        <th>标题</th>
        <th class="r-align">添加时间</th>
        <th class="r-align">修改时间</th>
        <th class="r-align">发布时间</th>
        <th class="r-align">详情</th>
        <th class="r-align">发布</th>
        <th class="r-align">删除</th>
    </tr>
    </thead>
    <tbody>
    <% for ( var i = 0, len = data.list.length; i < len; i++ ) { %>
    <tr>
        <td><span class="no"><%= sn + i + 1 %></span></td>
        <td><%= data.list[i].title %></td>
        <td class="r-align">
            <%if(data.list[i].created_timestamp){%>
            <%= new Date(data.list[i].created_timestamp * 1000).Format("yyyy-MM-dd hh:mm:ss") %>
            <%}%>
        </td>
        <td class="r-align">
            <%if(data.list[i].last_modify_timestamp){%>
            <%= new Date(data.list[i].last_modify_timestamp * 1000).Format("yyyy-MM-dd hh:mm:ss") %>
            <%}%>
        </td>
        <td class="r-align">
            <%if(data.list[i].pub_timestamp){%>
            <%= new Date(data.list[i].pub_timestamp * 1000).Format("yyyy-MM-dd hh:mm:ss") %>
            <%}%>
        </td>
        <td class="r-align">
            <a target="_blank" href="detail.html#<%= data.list[i].news_id %>" class="btn btn-primary"
               role="button">详情</a>
        </td>
        <td class="r-align">
            <button type="button"
                    data-newsid="<%= data.list[i].news_id %>"
                    class="btn btn-publish btn-default btn-toggle<% if(data.list[i].pub_status) { %> active<% } %>">
                <% if(data.list[i].pub_status) { %>
                已发布
                <% }else{ %>
                发布
                <% } %>
            </button>
        </td>
        <td class="r-align">
            <button type="button"
                    data-newsid="<%= data.list[i].news_id %>"
                    class="btn btn-delete btn-danger">删除
            </button>
        </td>
    </tr>
    <% } %>
    </tbody>
</table>


