<% if (pn > 0) { %>
<ul class="pagination pagination-lg">

    <li class="<% if (1 == pg) { %>disabled<% } %>">
        <a href="<% if (1 == pg) { %>javascript:void(0)<% } else { %>#<%= pg - 1 %> <% } %>">&laquo;</a>
    </li>

    <% for (var j = 1; j <= pn; j++) { %>
    <li class="<% if (j == pg) { %>active<% } %>"><a href="#<%= j %>"><%= j %></a></li>
    <% } %>

    <li class="<% if (pn == pg) { %>disabled<% } %>">
        <a href="<% if (pn == pg) { %>javascript:void(0)<% } else { %>#<%= pg + 1 %> <% } %>">&raquo;</a>
    </li>
</ul>
<% } %>